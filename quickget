            ISO="gnome_os_installer_${RELEASE}.iso";;
        3.38*)
            URL="https://download.gnome.org/gnomeos/${RELEASE}"
            ISO="gnome_os_installer.iso";;
        *)
            URL="https://download.gnome.org/gnomeos/${RELEASE}"
            ISO="gnome_os_installer_${RELEASE}.iso";;
    esac

    echo "${URL}/${ISO} ${HASH}"
}

