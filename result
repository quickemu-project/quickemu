function releases_() {
    echo latest
}

function get_() {
    local HASH=""
    local URL="https://sourceforge.net/projects/f-void/files"
    REST=$(web_pipe "https://sourceforge.net/projects/f-void/rss?path=/" | grep 'title><!\[CDATA' | cut -d'[' -f3 | cut -d']' -f1 | grep '\.iso' | head -1)
    echo "${URL}${REST}"
}


